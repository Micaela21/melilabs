    agent any

    stages {
        stage('build'){
            steps {
                sh nodejs(nodeJSInstallationName: 'node',configId: '<config-file-provider-id>') {
                    sh 'npm config ls'
                }
            }
        }
        stage('test'){
            steps{
                echo 'testing the application'
            }
        }
        stage('deploy'){
            steps{
                echo 'deploying the application'
            }
        }
    }
}