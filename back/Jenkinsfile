pipeline {
    agent any 

    stages {
        stage('build'){
            agent {Dockerfile true}
            steps {
                echo 'building the application'
            }
        }
        stage('test'){
            steps{
                echo 'testing the application'
            }
        }
        stage('deploy'){
            steps{
                echo 'deploying the application'
            }
        }
    }
}